
#include<iosream>
#include<math>
struct DaThuc
{
    float x[100];
    int n;
};
typedef struct DaThuc DATHUC;
void NhapDaThuc(DATHUC &);
void XuatDaThuc(DATHUC);
void NhapDaThuc(DATHUC &dth)
{
    printf("Nhap bac da thuc: "\n);
    scanf("%d", &dth.n);
    for(int i = dth.n; i >= 0; i--)
    {
        float temp;
        printf("Nhap he so: "\n);
        scanf("%f", &temp);
        dth.x[i] = temp;
    }
}
void XuatDaThuc(DATHUC dth)
{
    for(int i = dth.n; i >= 0; i--)
    {
        printf("%8.3fx^%d + ", dth.x[i], i);
    }
}
int main()
{
    DATHUC dth;
    NhapDaThuc(dth);
    XuatDaThuc(dth);
    getch();
    return 0;
}
